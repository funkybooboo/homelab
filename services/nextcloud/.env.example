# PostgreSQL Configuration
POSTGRES_USER=nextcloud
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nextcloud

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# Nextcloud Admin Account
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=your_admin_password_here

# Trusted Domains (space-separated)
NEXTCLOUD_TRUSTED_DOMAINS=localhost 192.168.1.100

# Data Directory (where files are stored on host)
DATA_PATH=/path/to/nextcloud/data
