# Timezone
TIMEZONE=America/New_York

# Server Configuration
# Your public IP or domain name
SERVERURL=your.domain.com

# WireGuard port
SERVERPORT=51820

# Number of peer configs to generate (comma-separated names or number)
# Examples: PEERS=3 or PEERS=phone,laptop,tablet
PEERS=3

# DNS server for peers (use Pi-hole if available: 10.13.13.100)
PEERDNS=auto

# Internal subnet for VPN
INTERNAL_SUBNET=10.13.13.0

# Allowed IPs (0.0.0.0/0 for all traffic, or specific subnets)
# Use 0.0.0.0/0 to route all traffic through VPN
# Use 10.0.0.0/8,192.168.0.0/16 for only local network access
ALLOWEDIPS=0.0.0.0/0
