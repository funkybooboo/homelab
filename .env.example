# Homelab Services Configuration
# Copy this file to .env and enable the services you want to use

# Enable/Disable Services (true/false)
# All services are disabled by default - enable only what you need

# Apps
ENABLE_N8N=false
ENABLE_GITEA=false
ENABLE_NEXTCLOUD=false

# Media Servers - WARNING: Do not enable both Jellyfin and Plex simultaneously!
# They both use port 1900/udp for DLNA discovery and will conflict.
# Choose one or the other.
ENABLE_JELLYFIN=false
ENABLE_PLEX=false

ENABLE_MINECRAFT=false
ENABLE_FRESHRSS=false
ENABLE_OMNIVORE=false
ENABLE_SEARXNG=false

# Infrastructure
ENABLE_NGINX=false
ENABLE_WIREGUARD=false
ENABLE_PIHOLE=false
ENABLE_WATCHTOWER=false
ENABLE_REGISTRY=false

# Databases
ENABLE_POSTGRES=false
ENABLE_MONGODB=false
ENABLE_ELASTICSEARCH=false

# Other
ENABLE_OLLAMA=false
ENABLE_OPENSPEEDTEST=false

# Service-specific configurations
# Each service has its own .env file in services/<service-name>/.env
# Configure those files for service-specific settings
